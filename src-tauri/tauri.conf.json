{
  "package": {
    "productName": "YTD.CC",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build",
    "withGlobalTauri": true
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "YTD.CC",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": ["ffmpeg"],
      "copyright": "",
      "category": "Utility",
      "shortDescription": "download youtube video",
      "longDescription": "download youtube video",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "dialogImagePath": "icons/installer_bg.png",
          "bannerPath": "icons/installer_banner.png",
          "language": "zh-TW"
        }
      }
    },

    "macOSPrivateApi": true,
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJBMTI0RjQ5QTAxNDhGQ0IKUldUTGp4U2dTVThTdXA1RXY1SER5ckEzUHRLUjF0TzlYNVRoQUNUU091eE5QUERZUVgxOWd5UC8K"
    },
    "allowlist": {
      "window": {
        "minimize": true,
        "maximize": true,
        "unmaximize": true,
        "close": true,
        "startDragging": true
      },
      "shell": {
        "sidecar": true,
        "scope": [{ "name": "ffmpeg", "args": true, "sidecar": true }],
        "open": true
      },
      "http": {
        "all": true,
        "scope": ["https://*/*"],
        "request": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$CONFIG", "$CONFIG/*"]
      },
      "notification": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "YTD.CC",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: * 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
